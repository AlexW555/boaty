
<div class="p-4 sm:ml-64">
   <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Boats</h1>
    <%= link_to "New boat", new_boat_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-70 uppercase bg-gray-50 dark:bg-gray-70 dark:text-gray-40">
    <tr>
      <th scope="col" class="px-6 py-3">Name</th>
      <th scope="col" class="px-6 py-3">Location</th>
      <th scope="col" class="px-6 py-3">Type</th>
      <th scope="col" class="px-6 py-3">Distance</th>
      <th scope="col" class="px-6 py-3">Available</th>
      <th scope="col" class="px-6 py-3"></th>
    </tr>
  </thead>
  <tbody>
    <% @boats.each do |boat| %>
     <tr class="odd:bg-white odd:dark:bg-gray-90 even:bg-gray-50 even:dark:bg-gray-80 border-b dark:border-gray-70">
                <th scope="row" class="px-6 py-4 font-medium text-gray-90 whitespace-nowrap dark:text-gray-40"><%= boat.name %>
                </th>
      <td class="px-6 py-4"><%= boat.location %></td>
      <td class="px-6 py-4"><%= boat.boat_type %></td>
      <td class="px-6 py-4"><%= boat.distance %></td>
      <td class="px-6 py-4"><%= boat.available %></td>
      <td class="px-6 py-4">
      <%= link_to boat, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
        <%=image_tag("view.svg", style: 'height:100%')%>
      <% end %>
      <%= link_to edit_boat_path(boat), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
        <%=image_tag("edit.svg", style: 'height:100%')%>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</div>
</div>
