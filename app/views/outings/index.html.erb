
   <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Outings</h1>
    <%= link_to "New Outing", new_outing_path, class: "rounded-lg py-3 px-5 bg-indigo-600 text-white block font-medium" %>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-70 uppercase bg-gray-50 dark:bg-gray-70 dark:text-gray-40">
    <tr>
      <th scope="col" class="px-6 py-3">Name</th>
      <th scope="col" class="px-6 py-3">User</th>
      <th scope="col" class="px-6 py-3">Boat</th>
      <th scope="col" class="px-6 py-3">Distance</th>
      <th scope="col" class="px-6 py-3">Available</th>
      <th scope="col" class="px-6 py-3"></th>
    </tr>
  </thead>
  <tbody>
    <% @outings.each do |outing| %>
     <tr class="odd:bg-white odd:dark:bg-gray-90 even:bg-gray-50 even:dark:bg-gray-80 border-b dark:border-gray-70">
                <th scope="row" class="px-6 py-4 font-medium text-gray-90 whitespace-nowrap dark:text-gray-40"><%= outing.updated_at %>
                </th>
      <td class="px-6 py-4"><%= outing.user.email %></td>
      <td class="px-6 py-4"><%= outing.boat.name %></td>
      <td class="px-6 py-4"><%= outing.distance %></td>
      <td class="px-6 py-4">
      <%= link_to outing, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
        <%=image_tag("view.svg", style: 'height:100%')%>
      <% end %>
      <%= link_to edit_outing_path(outing), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
        <%=image_tag("edit.svg", style: 'height:100%')%>
      <% end %>                                      
      </td>
    </tr>
  <% end %>
  </tbody>
</div>

